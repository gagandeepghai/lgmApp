<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_wood"
    tools:context="com.losgatosmeat.restaurant.lgm.MainActivity">

    <TextView
        android:id="@+id/home_text"
        style="@style/CodeFontHeader"
        android:textSize="48sp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="900px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/home_text"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        <Button
            android:id="@+id/button_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            style="@style/button"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/button_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@+id/button_menu"
            style="@style/button"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/button_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@+id/button_order"
            style="@style/button"
            android:layout_margin="5dp"/>
    </RelativeLayout>
</RelativeLayout>
